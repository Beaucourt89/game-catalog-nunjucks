{% extends "layout/index.njk" %}
{% block title %}
  <title>GD: {{game.name}}</title>
{% endblock %}

{% block css %}
  <link rel="stylesheet" href="/assets/styles/game.css">
{% endblock %}

{% block content %}

  <div class="encadrementPrincipal text-white bg-dark">
    <div class="card mb-3 text-white bg-dark" style="max-width: 100%;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{game.cover.url}}" class="card-img" alt="{{game.name}} cover">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title">{{game.name}}</h3>
        <p class="card-text textSummary">{{game.summary}}</p>
         
 
        <p class="card-text"><small><strong class="cligno">available on :</strong>
    {% for platform in game.platforms %}
        <img src="{{platform.platform_logo.url}}" height="60px" width="60px" class="ml-2 imgPlatform">
      {% endfor %}</small></p>
      </div>
    </div>
  </div>


  </div>
  <h2>Screenshots</h2>
  {% if game.screenshots %}
    <div id="game-screenshots" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        {% for screenshot in game.screenshots %}
          {% if loop.index0 === 0 %}
            <li data-target="#game-screenshots" data-slide-to="0" class="active"></li>
          {% else %}
            <li data-target="#game-screenshots" data-slide-to="{{loop.index0}}"></li>
          {% endif %}
        {% endfor %}
      </ol>
      <div class="carousel-inner">
        {% for screenshot in game.screenshots %}
          {% if loop.index0 === 0 %}
            <div class="carousel-item active">
              <img src="{{screenshot.url}}" class="d-block w-100" alt="{{game.name}}'s screenshot">
            </div>
          {% else %}
            <div class="carousel-item">
              <img src="{{screenshot.url}}" class="d-block w-100" alt="{{game.name}}'s screenshot">
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <a class="carousel-control-prev" href="#game-screenshots" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#game-screenshots" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    {% else %}
      <p>No screenshots</p>
    {% endif %}
  </div>
  </div>
{% endblock %}